<view class='cu-custom' style="height:{{CustomBar}}px;">
  <view class="cu-bar fixed bg-white" style="height:{{CustomBar}}px;padding-top:{{StatusBar}}px;">
    <view class='content' style='top:{{StatusBar}}px;'></view>
    <text class='icon-back' style='margin-left:20px;font-size:16px' bindtap='back' decode='true'>&nbsp;主题修改</text>

  </view>
</view>


<view class="cu-bar bg-white solid-bottom solid-top" style='margin-top:10px'>
  <view class='action'>
    <text class='icon-title text-orange'></text>深色背景
  </view>
</view>
<view class='grid col-3 padding-sm'>
  <view class='padding-sm' wx:for="{{ColorList}}" wx:key>
    <view class='bg-{{item.name}} padding radius text-center shadow-blur'  bindtap='bg_color' data-color='bg-{{item.name}}' data-name="{{item.title}}">
      <view class="text-lg">{{item.title}}</view>
      <view class='margin-top-sm text-Abc'>{{item.name}}</view>
    </view>
  </view>
</view>


<view class="cu-bar bg-white solid-bottom margin-top">
  <view class='action'>
    <text class='icon-title text-orange'></text>渐变背景
  </view>
</view>
<view class='grid col-2 padding-sm'>
  <view class='padding-sm'>
    <view class='bg-gradual-red padding radius text-center shadow-blur' bindtap='bg_color' data-color='bg-gradual-red' data-name="魅红">
      <view class="text-lg">魅红</view>
      <view class='margin-top-sm text-Abc'>#f43f3b - #ec008c</view>
    </view>
  </view>
  <view class='padding-sm'>
    <view class='bg-gradual-orange padding radius text-center shadow-blur'  bindtap='bg_color' data-color='bg-gradual-orange' data-name="鎏金">
      <view class="text-lg">鎏金</view>
      <view class='margin-top-sm text-Abc'>#ff9700 - #ed1c24</view>
    </view>
  </view>
  <view class='padding-sm'>
    <view class='bg-gradual-green padding radius text-center shadow-blur'  bindtap='bg_color' data-color='bg-gradual-green' data-name="翠柳">
      <view class="text-lg">翠柳</view>
      <view class='margin-top-sm text-Abc'>#39b54a - #8dc63f</view>
    </view>
  </view>
  <view class='padding-sm'>
    <view class='bg-gradual-blue padding radius text-center shadow-blur'  bindtap='bg_color' data-color='bg-gradual-blue' data-name="靛青">
      <view class="text-lg">靛青</view>
      <view class='margin-top-sm text-Abc'>#0081ff - #1cbbb4</view>
    </view>
  </view>
  <view class='padding-sm'>
    <view class='bg-gradual-purple padding radius text-center shadow-blur'  bindtap='bg_color' data-color='bg-gradual-purple' data-name="惑紫">
      <view class="text-lg">惑紫</view>
      <view class='margin-top-sm text-Abc'>#9000ff - #5e00ff</view>
    </view>
  </view>
  <view class='padding-sm'>
    <view class='bg-gradual-pink padding radius text-center shadow-blur'  bindtap='bg_color' data-color='bg-gradual-red' data-name="霞彩">
      <view class="text-lg">霞彩</view>
      <view class='margin-top-sm text-Abc'>#ec008c - #6739b6</view>
    </view>
  </view>
</view>

<view style='height:20px'></view>